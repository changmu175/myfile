<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_group_chat_settings_bg_color"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">


        <FrameLayout
            android:id="@+id/group_chat_settings_item_top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dividing_line_height"
            android:background="@color/common_dividing_line_bg_color" />

        <RelativeLayout
            android:id="@+id/group_chat_settings_item_one_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_chat_settings_item_common_height"
            android:layout_marginTop="@dimen/group_chat_settings_item_one_layout_marginTop"
            android:background="@color/group_chat_settings_item_bg_color">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentTop="true"
                android:background="@color/common_dividing_line_bg_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/group_chat_settings_item_common_marginLeft"
                android:text="@string/group_chat_settings_top_chat_text"
                android:textColor="@color/common_ninety_five_percent_black"
                android:textSize="@dimen/common_head_text_size"
                tools:ignore="RelativeOverlap" />

            <CheckBox
                android:id="@+id/group_chat_settings_top_chat_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/group_chat_settings_item_common_marginRight"
                android:checked="false"
                android:background="@drawable/bg_common_chat_settings_top_chat_check_box_selector"
                android:button="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/common_dividing_line_bg_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_chat_settings_item_two_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_chat_settings_item_common_height"
            android:background="@color/group_chat_settings_item_bg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/group_chat_settings_item_common_marginLeft"
                android:text="@string/group_chat_settings_messages_no_disturb_text"
                android:textColor="@color/common_ninety_five_percent_black"
                android:textSize="@dimen/common_head_text_size"
                tools:ignore="RelativeOverlap" />

            <CheckBox
                android:id="@+id/group_chat_settings_messages_no_disturb_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/group_chat_settings_item_common_marginRight"
                android:checked="false"
                android:background="@drawable/bg_common_chat_settings_top_chat_check_box_selector"
                android:button="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/common_dividing_line_bg_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_chat_settings_item_three_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_chat_settings_item_common_height"
            android:visibility="gone"
            android:background="@color/group_chat_settings_item_bg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/group_chat_settings_item_common_marginLeft"
                android:text="@string/group_chat_settings_show_group_nickname_text"
                android:textColor="@color/common_ninety_five_percent_black"
                android:textSize="@dimen/common_head_text_size"
                tools:ignore="RelativeOverlap" />

            <CheckBox
                android:id="@+id/group_chat_settings_messages_show_group_nickname_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/group_chat_settings_item_common_marginRight"
                android:background="@drawable/bg_common_chat_settings_top_chat_check_box_selector"
                android:button="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/common_dividing_line_bg_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/single_chat_settings_part_five_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_chat_settings_item_common_height"
            android:background="@color/single_chat_settings_item_bg_color"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/single_chat_settings_item_common_marginLeft"
                android:text="@string/single_setting_history_file"
                android:textColor="@color/common_ninety_five_percent_black"
                android:textSize="@dimen/common_head_text_size" />

            <ImageView
                android:id="@+id/right_arrow2"
                android:layout_marginRight="@dimen/single_chat_settings_item_common_marginRight"
                style="@style/style_common_setting_arrow"
                android:contentDescription="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_chat_settings_item_four_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_chat_settings_item_common_height"
            android:layout_marginTop="@dimen/group_chat_settings_part_four_layout_marginTop"
            android:background="@drawable/common_item_selector">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentTop="true"
                android:background="@color/common_dividing_line_bg_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/group_chat_settings_item_common_marginLeft"
                android:text="@string/group_chat_settings_clean_all_chat_messages_text"
                android:textColor="@color/common_ninety_five_percent_black"
                android:textSize="@dimen/common_head_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dividing_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/common_dividing_line_bg_color" />
        </RelativeLayout>


        <Button
            android:id="@+id/group_chat_settings_dissolve_group_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_chat_settings_dissolve_group_btn_height"
            android:layout_marginTop="@dimen/group_chat_settings_dissolve_group_btn_marginTop"
            android:layout_marginLeft="@dimen/group_chat_settings_dissolve_group_btn_marginLeft"
            android:layout_marginRight="@dimen/group_chat_settings_dissolve_group_btn_marginRight"
            android:layout_marginBottom="@dimen/group_chat_settings_dissolve_group_btn_marginBottom"
            android:text="@string/group_chat_settings_dissolve_group_btn_text"
            android:textAllCaps="false"
            android:textColor="@color/common_ninety_five_percent_white"
            android:background="@drawable/bg_group_chat_settings_dissolve_group_btn_selector"
            />


    </LinearLayout>


    </ScrollView>


</LinearLayout>
