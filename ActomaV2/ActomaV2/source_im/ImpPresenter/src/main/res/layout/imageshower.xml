<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/root_view">
    <TextView
        android:id="@+id/no_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_photo"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />


    <android.support.v4.view.ViewPager
        android:id="@+id/imageShowerViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/pic_loading_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_image_loading"
        android:visibility="gone"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/picListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_chat_picpreview_selector"
        android:contentDescription="@null"/>

    <Button
        android:id="@+id/originPicGetBtn"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/origin_pic_btn_selector"
        android:textColor="#f9e5bc"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/body1_14"/>
</RelativeLayout>