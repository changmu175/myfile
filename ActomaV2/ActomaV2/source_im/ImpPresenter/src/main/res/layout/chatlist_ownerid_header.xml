<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="46dp"
    android:layout_height="44dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <com.xdja.comm.circleimageview.CircleImageView
        android:id="@+id/header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/corp_user_40dp" />

    <TextView
        android:id="@+id/notReadCount"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/talk_list_new_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/talk_list_item_num_text_size" />
    <TextView
        android:id="@+id/notRead"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        android:background="@drawable/bg_new_message_nocount"
        android:gravity="center"/>

</RelativeLayout>