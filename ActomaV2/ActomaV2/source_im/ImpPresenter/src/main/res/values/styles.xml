<resources>

    <!-- Base application theme. -->
    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
-->

    <style name="ToolBarPopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/base_title_popup_gold</item>
    </style>

    <style name="AppDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!--时间线-->
    <style name="talkdetail_timeLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_fifty_percent_black</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_marginTop">@dimen/chatdetail_timeline_margin_t</item>
        <item name="android:layout_marginBottom">@dimen/chatdetail_timeline_margin_b</item>
        <item name="android:textSize">@dimen/chatlist_item_sender_name_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--聊天详情头像-->
    <style name="talkdetail_header">
        <item name="android:layout_width">@dimen/chatlist_item_icon_size</item>
        <item name="android:layout_height">@dimen/chatlist_item_icon_size</item>
        <item name="android:src">@drawable/corp_user_40dp</item>
    </style>

    <!--发送者头像-->
    <style name="talkdetail_senderHeader" parent="talkdetail_header">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--发送者姓名-->
    <style name="talkdetail_senderName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/chatlist_item_sender_name_magin_b</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_sender_name_magin_l</item>
        <item name="android:textColor">@color/chatlist_item_sender_name_color</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/chatlist_item_sender_name_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--下载失败-->
    <style name="talkdetail_downFailed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_pao_left_margin_l</item>
        <item name="android:drawableLeft">@drawable/icon_send_error_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/chatlist_item_sendstate_txt_color</item>
        <item name="android:textSize">@dimen/chatlist_item_sendstate_txt_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--新消息标识-->
    <style name="talkdetail_newMessage">
        <item name="android:layout_width">@dimen/chatlist_item_recnew_size</item>
        <item name="android:layout_height">@dimen/chatlist_item_recnew_size</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">@dimen/chatlist_item_pao_img_left_padding_r</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_pao_img_left_padding_r</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/img_newmsg</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--闪信炸弹动画-->
    <style name="talkdetail_flashMessageBomb">
        <item name="android:layout_width">@dimen/chatlist_item_boom_size</item>
        <item name="android:layout_height">@dimen/chatlist_item_boom_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/animlist_bomb</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--语音消息时长-->
    <style name="talkdetail_voiceMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_voiclength_txt_margin_l</item>
        <item name="android:layout_marginRight">@dimen/chatlist_item_voiclength_txt_margin_l</item>
        <item name="android:textColor">@color/chatlist_item_txt_color</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">@dimen/chatlist_item_txt_size</item>
    </style>

    <!--消息发送状态-->
    <style name="talkdetail_sendState">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/bg_send_photo_error_selector</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--消息接收状态-->
    <style name="talkdetail_receiveState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/chatlist_item_sendstate_txt_color</item>
        <item name="android:textSize">@dimen/chatlist_item_sendstate_txt_size</item>
    </style>

    <!--发送消息闪信标记-->
    <style name="talkdetail_sendChatFlashFlag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/shan_float_left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--已经销毁的消息-->
    <style name="talkdetail_messageDestroyed">
        <!--<item name="android:layout_width">@dimen/chatlist_item_shan_voic_hide_w</item>-->
        <!--<item name="android:layout_height">@dimen/chatlist_item_shan_voic_hide_h</item>-->
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_pao_left_margin_l</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--发送者头像-->
    <style name="talkdetail_senderImage">
        <item name="android:layout_width">@dimen/chatlist_item_icon_size</item>
        <item name="android:layout_height">@dimen/chatlist_item_icon_size</item>
        <item name="android:src">@drawable/corp_user_40dp</item>
    </style>

    <!--接收消息的显示布局-->
    <style name="talkdetail_recContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_pao_left_margin_l</item>
        <item name="android:background">@drawable/bg_pao_left_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/chatlist_item_pao_max_w</item>
        <item name="android:minWidth">@dimen/chatlist_item_pao_min_w</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--接收消息的显示布局-->
    <style name="talkdetail_recVoiceLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/chatlist_item_pao_left_margin_l</item>
        <item name="android:background">@drawable/bg_pao_left_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">@dimen/chatlist_item_pao_max_w</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--发送消息的显示布局-->
    <style name="talkdetail_sendContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_pao_right_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/chatlist_item_pao_max_w</item>
        <item name="android:minWidth">@dimen/chatlist_item_pao_min_w</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--发送消息的显示布局-->
    <style name="talkdetail_sendVoiceLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_pao_right_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">@dimen/chatlist_item_pao_max_w</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/chatlist_item_pao_right_padding_b</item>
        <item name="android:paddingLeft">@dimen/chatlist_item_pao_right_padding_l</item>
        <item name="android:paddingRight">@dimen/chatlist_item_pao_right_padding_r</item>
        <item name="android:paddingTop">@dimen/chatlist_item_pao_right_padding_t</item>
    </style>

    <!-- 发送消息图片显示布局-->
    <style name="talkdetail_sendImageLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/chatlist_item_pao_right_margin_r</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- 接收消息图片显示布局-->
    <style name="talkdetail_recImageLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_pao_left_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AudioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--设置界面item的style-->
    <style name="style_setting_item_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:paddingLeft">@dimen/base_16</item>
        <item name="android:paddingRight">@dimen/base_16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/listview_item_bg</item>
    </style>

    <!--设置界面item左边label-->
    <style name="style_setting_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/base_black_95</item>
        <item name="android:textSize">@dimen/head_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/base_8</item>
    </style>

    <!--新消息提醒item右边开关-->
    <style name="style_item_swich">
        <item name="android:layout_width">@dimen/news_remind_check_width</item>
        <item name="android:layout_height">@dimen/news_remind_check_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/base_16</item>
        <item name="android:button">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/news_remind_switch_selector</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- 横线 -->
    <style name="view_line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/base_horizontal_line</item>
    </style>

    <!-- 文件列表tab标签-->
    <style name="fragment_tab_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#60000000</item>
    </style>
</resources>
