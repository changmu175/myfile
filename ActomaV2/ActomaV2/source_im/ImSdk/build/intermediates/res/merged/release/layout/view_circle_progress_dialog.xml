<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/blade_dialog_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/blade_20"
              android:paddingTop="@dimen/blade_20"
              tools:ignore="Overdraw">

    <ProgressBar
        android:layout_width="@dimen/blade_progressbar_width"
        android:layout_height="@dimen/blade_progressbar_height"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:indeterminateDrawable="@drawable/circle_progressbar" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/blade_16"
        android:gravity="center_vertical"
        android:textColor="@color/blade_black_65"
        android:textSize="@dimen/blade_font_14"
        android:visibility="gone" />

</LinearLayout>