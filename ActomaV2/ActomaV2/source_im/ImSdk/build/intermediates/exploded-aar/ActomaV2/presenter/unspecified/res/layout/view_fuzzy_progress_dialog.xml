<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/blade_dialog_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/blade_20"
              android:paddingTop="@dimen/blade_20"
              tools:ignore="Overdraw">

    <ProgressBar
        android:id="@+id/fuzzy_progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/blade_4"
        android:layout_marginRight="@dimen/blade_4"
        android:background="@null"
        android:max="100"
        android:progressDrawable="@drawable/progressbar" />
</LinearLayout>
