<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_bg_withgroup"
    tools:ignore="Overdraw"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/pic_safelock_guide"
        android:layout_marginTop="@dimen/base_30"
        android:layout_marginStart="@dimen/base_118"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/base_60"
        android:text="@string/safe_open_safe_other_borrow"
        android:textSize="@dimen/head_16"
        android:textColor="@color/blade_black_65"/>
    <TextView
        android:id="@+id/safe_no_way_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/safe_no_way_open"
        android:textSize="@dimen/head_16"
        android:textColor="@color/blade_black_65"/>

    <Button
        android:id="@+id/open_safe_switch"
        android:layout_width="@dimen/base_220"
        android:layout_height="@dimen/base_44"
        android:layout_marginTop="@dimen/base_30"
        android:layout_gravity="center"
        android:text="@string/safe_login_safe"
        android:textSize="@dimen/head_16"
        android:textColor="@color/blade_black_95"
        android:background="@drawable/btn_gold_normal"
        android:textAllCaps="false"/>

</LinearLayout>