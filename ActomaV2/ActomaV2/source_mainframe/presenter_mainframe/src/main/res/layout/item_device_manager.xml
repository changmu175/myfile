<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="@dimen/base_48"
    android:background="@color/blade_white_100"
    tools:ignore="Overdraw"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/base_16"
        android:layout_weight="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textColor="@color/base_black_95"
        android:textSize="@dimen/bigger_text_size_16" />

    <TextView
        android:id="@+id/device_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/base_16"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:singleLine="true"
        android:textColor="@color/base_black_65"
        android:textSize="@dimen/normal_text_size_14" />
</LinearLayout>