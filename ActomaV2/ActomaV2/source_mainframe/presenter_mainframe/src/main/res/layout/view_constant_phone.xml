<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin_16"
    android:paddingRight="@dimen/activity_horizontal_margin_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_phone_prompt"
        android:textColor="@color/blade_black_65"
        android:textSize="@dimen/normal_text_size_14" />

    <TextView
        android:id="@+id/tv_verify_phone_number_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_24"
        android:layout_marginTop="@dimen/base_24"
        android:textColor="@color/blade_black_95"
        android:textSize="@dimen/text_size_20" />
</LinearLayout>