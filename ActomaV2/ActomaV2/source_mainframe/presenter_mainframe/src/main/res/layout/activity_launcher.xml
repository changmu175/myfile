<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:ignore="Overdraw"
    android:id="@+id/launcher_root"
    tools:context="com.xdja.presenter_mainframe.presenter.activity.LauncherPresenter">

    <ImageView
        android:id="@+id/iv_launcher_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launcher_title_margin_top"
        android:background="@mipmap/logo_login" />

    <ImageView
        android:id="@+id/iv_launcher_logo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_below="@id/iv_launcher_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_24"
        android:background="@mipmap/logo_login_title" />

    <TextView
        android:id="@+id/btn_launcher_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shut_again_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="52dp"/>

    <LinearLayout
        android:id="@+id/layout_launcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launcher_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/launcher_button_margin_bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_launcher_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_bg_gold_transparent"
            android:text="@string/register"
            android:layout_marginEnd="@dimen/base_20"
            android:textColor="@color/launcher_text_color"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"
            android:textAllCaps="false"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/btn_launcher_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_bg_gold_round"
            android:text="@string/login"
            android:textColor="@color/blade_black_95"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"
            android:textAllCaps="false"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
