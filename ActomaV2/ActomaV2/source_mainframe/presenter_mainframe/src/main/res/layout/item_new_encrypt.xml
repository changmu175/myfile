<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/news_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_16"
        android:paddingRight="@dimen/base_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/other_app_encrypt_img"
                android:layout_width="@dimen/base_40"
                android:layout_height="@dimen/base_40"
                android:contentDescription="@null"
                android:layout_marginEnd="@dimen/base_10"
                android:layout_marginTop="@dimen/base_12"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/other_app_encrypt_content"
                style="@style/style_setting_item_label"
                android:layout_marginTop="@dimen/base_12"
                android:text="@string/news_remind" />

            <TextView
                android:id="@+id/other_app_encrypt_descripteion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_3"
                android:singleLine="false"
                android:textColor="@color/base_black_65"
                android:textSize="@dimen/body2_12" />

            <TextView
                android:id="@+id/other_app_encrypt_descripteion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/base_3"
                android:singleLine="false"
                android:textColor="@color/base_black_65"
                android:textSize="@dimen/body2_12" />

            <TextView
                android:id="@+id/other_app_encrypt_descripteion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_12"
                android:singleLine="false"
                android:textColor="@color/base_black_65"
                android:textSize="@dimen/body2_12" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/other_app_encrypt_checkbox"
            style="@style/style_item_swich"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="-36dp"
            android:layout_marginEnd="@dimen/base_10"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/view_line_style" />
</LinearLayout>
