<?xml version="1.0" encoding="utf-8"?><FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    tools:ignore="UselessParent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="56dp"        android:orientation="vertical"        tools:ignore="UselessParent">        <RelativeLayout            android:id="@+id/search_tool_bar_layout"            android:layout_width="match_parent"            android:layout_marginRight="@dimen/base_12"            android:layout_height="match_parent"            android:layout_marginBottom="8dp"            android:layout_centerVertical="true">            <ImageView                android:id="@+id/search_icon"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_centerVertical="true"                android:visibility="gone"                android:src="@drawable/abs_ic_search"                android:contentDescription="@null"/>            <EditText                android:id="@+id/search_edittext"                style="@style/search_edittext"                android:paddingRight="28dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="14sp"                android:textColorHint="#38FFFFFF"                android:drawableLeft="@drawable/ic_searchbar_search"                android:drawablePadding="4dp"                android:layout_alignParentBottom="true"                android:hint="@string/action_search"                android:background="@drawable/bg_edittext"                android:singleLine="true"                android:layout_marginBottom="2dp"                android:layout_centerVertical="true"                android:textColor="#FFe8dec8"/>            <ImageButton                android:id="@+id/btn_search_clear"                android:layout_width="24dp"                android:layout_height="24dp"                android:layout_alignParentBottom="true"                android:layout_alignParentRight="true"                android:layout_marginBottom="12dp"                android:layout_marginRight="1dp"                android:background="@null"                android:src="@drawable/ic_searchbar_clear"                android:contentDescription="@null"/>        </RelativeLayout>    </RelativeLayout></FrameLayout>