<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="@dimen/list_item_height"        android:background="@drawable/selector_contact_list_item"        android:orientation="horizontal"	    android:gravity="center_vertical">        <com.xdja.comm.circleimageview.CircleImageView            android:id="@+id/avatar"            android:layout_width="@dimen/list_item_avatar_size"            android:layout_height="@dimen/list_item_avatar_size"            android:layout_gravity="center_vertical"            android:layout_marginLeft="@dimen/list_item_avatar_magin_lr"            android:layout_marginRight="@dimen/list_item_avatar_magin_lr"            android:src="@drawable/group_avatar_40" />        <TextView            android:id="@+id/group_name"            android:layout_width="wrap_content"            android:layout_height="@dimen/list_item_height"            android:gravity="center_vertical"            android:textColor="@color/base_black_95"            android:layout_marginRight="12dp"            android:textSize="@dimen/list_item_name_size"            android:singleLine="true"/></LinearLayout>