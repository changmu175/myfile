<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/tree_item_layout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:descendantFocusability="blocksDescendants"    android:gravity="center_horizontal">    <RelativeLayout        android:id="@+id/round_lay"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_marginLeft="@dimen/base_12"        android:layout_marginRight="@dimen/base_12">        <com.xdja.comm.circleimageview.CircleImageView            android:id="@+id/round_img"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_centerVertical="true"            android:src="@drawable/img_avater_40" />        <ImageView            android:id="@+id/expand_img"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:contentDescription="@null"/>    </RelativeLayout>    <!-->此处node_value的text size使用dp,适配中兴手机android7需要，故lint忽略<-->    <TextView        android:id="@+id/node_value"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_marginRight="32dp"        android:layout_toLeftOf="@+id/item_open_safe_label"        android:layout_toRightOf="@+id/round_lay"        android:ellipsize="end"        android:maxEms="7"        android:singleLine="true"        android:textColor="@color/base_black_95"        android:textSize="@dimen/base_16"        tools:ignore="SpUsage" />    <TextView        android:id="@+id/node_antong_tag"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/node_value"        android:layout_toRightOf="@+id/round_lay"        android:text="@string/antong_tag"        android:textColor="#a6000000"        android:textSize="8sp"        android:visibility="gone"        tools:ignore="SmallSp" />    <RelativeLayout        android:id="@+id/click_layout"        android:layout_width="72dp"        android:layout_height="56dp"        android:layout_alignParentRight="true">        <ImageButton            android:id="@+id/open_safe_switch"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:background="@null"            android:paddingBottom="@dimen/base_10"            android:paddingLeft="@dimen/base_12"            android:paddingRight="@dimen/base_10"            android:paddingTop="@dimen/base_10"            android:src="@drawable/at_normal"            android:contentDescription="@null"/>    </RelativeLayout>    <TextView        android:id="@+id/item_open_safe_label"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_toLeftOf="@id/click_layout"        android:ellipsize="end"        android:gravity="center"        android:maxEms="7"        android:singleLine="true"        android:text="@string/contact_safe_communication"        android:textColor="#cf5516"        android:textSize="14sp"        android:visibility="gone" /></RelativeLayout>