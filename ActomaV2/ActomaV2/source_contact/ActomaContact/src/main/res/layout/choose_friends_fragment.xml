<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <include        android:id="@+id/search_layout"        layout="@layout/contact_search_layout" />    <RelativeLayout        android:id="@+id/select_person_list_layout"        android:layout_width="fill_parent"        android:layout_height="fill_parent"         >        <ListView            android:id="@+id/friends_contact_list"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:scrollbars="none"            android:divider="#d9d9d9"            android:dividerHeight="1px"            />        <com.xdja.contact.view.SlidarView            android:id="@+id/slidarview"            android:layout_width="@dimen/alpha_width"            android:layout_height="match_parent"            android:layout_alignParentRight="true"            android:layout_marginRight="@dimen/base_8"            android:layout_marginBottom="@dimen/base_10"/>        <TextView            android:id="@+id/sliderTv"            android:layout_width="80dp"            android:layout_height="80dp"            android:background="@drawable/bg_alpha_index"            android:gravity="center"            android:visibility="gone"            android:textColor="#6f5c3c"            android:textSize="40sp"            android:layout_centerInParent="true"/>    </RelativeLayout>    <RelativeLayout        android:id="@+id/empty_list_view"        android:layout_width="match_parent"        android:layout_height="0px"        android:layout_weight="1"        android:visibility="gone"        android:layout_gravity="center"        android:gravity="center">        <ImageView                android:id="@+id/emptyListViewImage"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:layout_centerInParent="true"                android:src="@drawable/img_group_empty_view"                android:contentDescription="@null"/>            <TextView                android:id="@+id/emptyListViewMessage"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="20dp"                android:gravity="center"                android:text="@string/no_group"                android:textSize="@dimen/head_16"                android:textColor="@color/base_black_30"                android:layout_below="@id/emptyListViewImage"/>    </RelativeLayout></LinearLayout>