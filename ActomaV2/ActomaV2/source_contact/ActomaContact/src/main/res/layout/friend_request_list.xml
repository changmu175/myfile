<?xml version="1.0" encoding="utf-8"?><RelativeLayout    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:android="http://schemas.android.com/apk/res/android">    <include        android:id="@+id/toolbar"        layout="@layout/view_toolbar"/>    <RelativeLayout        android:layout_below="@id/toolbar"        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:id="@+id/friend_request_list_top"            android:layout_alignParentTop="true"            android:layout_width="match_parent"            android:layout_height="48dp"            android:orientation="horizontal"            android:gravity="center"            android:background="#f4f4f4">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="@string/my_account"                android:textSize="14sp"                android:textColor="#f3000000"/>            <TextView                android:id="@+id/current_account"                android:layout_width="wrap_content"                android:layout_marginLeft="4dp"                android:layout_height="wrap_content"                android:textSize="14sp"                android:textColor="#f3000000"/>            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="18dp"                android:src="@drawable/friend_zxing"                android:contentDescription="@null"/>        </LinearLayout>        <View            android:id="@+id/divider0"            android:layout_below="@+id/friend_request_list_top"            android:layout_width="match_parent"            android:layout_height="1px"            android:background="#cccccc"/>        <TextView            android:id="@+id/search_area"            android:layout_width="match_parent"            android:layout_height="40dp"            android:paddingLeft="16dp"            android:drawablePadding="16dp"            android:gravity="center|left"            android:layout_below="@id/divider0"            android:drawableLeft="@drawable/img_contact_search_icon"            android:text="@string/actom_account"            android:textSize="14sp"            android:textColor="#3D000000"/>                <View            android:id="@+id/divider1"            android:layout_below="@+id/search_area"            android:layout_width="match_parent"            android:layout_height="1px"            android:background="#cccccc"/>        <TextView            android:id="@+id/friend_layout"            android:layout_below="@+id/divider1"            android:layout_width="match_parent"            android:layout_height="32dp"            android:background="#f4f4f4"            android:gravity="center|left"            android:text="@string/contact_new_friend"            android:paddingLeft="16dp"            android:textColor="#A6000000"            android:textSize="16sp"/>        <View            android:id="@+id/divider"            android:layout_below="@+id/friend_layout"            android:layout_width="match_parent"            android:layout_height="1px"            android:background="#cccccc"/>        <ListView            android:id="@+id/history_list_view"            android:layout_below="@+id/divider"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scrollbars="none"            android:divider="@color/list_view_divider"            android:dividerHeight="@dimen/list_divider_height"            android:background="@android:color/white">        </ListView>        <View            android:id="@+id/list_bottom_divider"            android:layout_below="@+id/history_list_view"            android:layout_width="match_parent"            android:layout_height="1px"            android:background="#cccccc"            android:visibility="gone"/>        <!--<RelativeLayout            android:id="@+id/history_empty_layout"            android:layout_below="@+id/history_list_view"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:visibility="gone">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/friend_list_empty"                android:visibility="visible"                android:layout_centerInParent="true"/>            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:textColor="#8A000000"                android:textSize="20sp"                android:text="没有好友请求"/>        </RelativeLayout>-->    </RelativeLayout></RelativeLayout>