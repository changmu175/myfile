<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    tools:ignore="Overdraw"    android:layout_width="fill_parent"    android:layout_height="wrap_content"    android:gravity="center"    android:paddingTop="@dimen/base_20"    android:paddingBottom="@dimen/base_20"    android:background="@color/listview_group_bg"    android:orientation="horizontal">    <ProgressBar        android:id="@+id/progress"        android:layout_width="@dimen/progressbar_width"        android:layout_height="@dimen/progressbar_height"        android:layout_gravity="center_vertical"        android:background="@null"        android:indeterminateDrawable="@drawable/progressbar"         />    <TextView        android:id="@+id/dialog_message"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_gravity="center_vertical"        android:gravity="center_vertical"        android:layout_marginLeft="@dimen/base_16"        android:textColor="@color/base_black_65"        android:textSize="@dimen/body1_14"        /></LinearLayout>