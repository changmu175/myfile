<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@drawable/selector_contact_list_item"    android:descendantFocusability="blocksDescendants"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/contact_name_alpha_lay"        android:layout_width="match_parent"        android:layout_height="32dp"        android:background="@color/base_gray_ee"        android:visibility="gone">        <TextView            android:id="@+id/contact_name_alpha"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="12dp"            android:textColor="@color/base_black_95"            android:text="@string/contact_name_alpha"            android:textSize="@dimen/list_item_Alpha_size" />        <View            android:layout_width="match_parent"            android:layout_height="@dimen/list_divider_height"            android:layout_alignParentBottom="true"            android:background="@color/list_divider_color" />    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="@dimen/list_item_height"        android:gravity="center_vertical"        android:orientation="horizontal">        <com.xdja.comm.circleimageview.CircleImageView            android:id="@+id/contact_item_avater"            android:layout_width="@dimen/list_item_avatar_size"            android:layout_height="@dimen/list_item_avatar_size"            android:layout_centerVertical="true"            android:layout_marginLeft="@dimen/list_item_avatar_magin_lr"            android:layout_marginRight="@dimen/list_item_avatar_magin_lr"            android:src="@drawable/group_avatar_40" />        <CheckBox            android:id="@+id/contact_item_checkbox"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="@dimen/base_20"            android:paddingLeft="@dimen/base_40"            android:paddingTop="@dimen/base_40"            android:paddingBottom="@dimen/base_40"            android:paddingRight="@dimen/base_16"            android:button="@null"            android:drawableLeft="@drawable/bg_checkbox_base_selector"            android:checked="false" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_toLeftOf="@id/contact_item_checkbox"            android:layout_toRightOf="@id/contact_item_avater"            android:gravity="center_vertical"            android:orientation="vertical">            <TextView                android:id="@+id/contact_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:text="@string/contact_name"                android:ellipsize="end"                android:singleLine="true"                android:textColor="@color/base_black_95"                android:textSize="@dimen/list_item_name_size" />            <TextView                android:id="@+id/contact_nickname"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:text="@string/nickname"                android:singleLine="true"                android:textColor="@color/base_black_65"                android:textSize="@dimen/list_item_nickname_size"                android:visibility="gone" />        </LinearLayout>    </RelativeLayout></LinearLayout>