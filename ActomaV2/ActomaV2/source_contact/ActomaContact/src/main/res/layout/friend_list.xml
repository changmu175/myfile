<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    tools:ignore="Overdraw"    android:layout_width="match_parent"    android:layout_height="match_parent"    >    <!--overdraw-->    <!--android:background="@color/base_gray_ee"-->    <android.support.v4.widget.SwipeRefreshLayout        android:id="@+id/swipe_container"        android:layout_width="match_parent"        android:layout_height="match_parent">        <ListView            android:id="@+id/friend_listview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:divider="@color/list_view_divider"            android:dividerHeight="@dimen/list_divider_height"            android:scrollbars="none" />    </android.support.v4.widget.SwipeRefreshLayout>    <com.xdja.contact.view.SlidarView        android:id="@+id/slidarview"        android:layout_width="@dimen/alpha_width"        android:layout_height="match_parent"        android:layout_alignParentRight="true"        android:layout_gravity="right"        android:layout_marginBottom="10dp"        android:layout_marginRight="8dp" />    <TextView        android:id="@+id/sliderTv"        android:layout_width="80dp"        android:layout_height="80dp"        android:layout_centerInParent="true"        android:background="@drawable/bg_alpha_index"        android:gravity="center"        android:textColor="#6f5c3c"        android:textSize="40sp"        android:visibility="gone" /></RelativeLayout>