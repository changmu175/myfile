<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#ffffff">        <include            android:id="@+id/toolbar"            layout="@layout/view_toolbar" />	    <!--modified by ycm -->        <TextView            android:id="@+id/confirm"            android:layout_width="wrap_content"            android:layout_height="28dp"            android:textSize="14sp"            android:textAllCaps="false"            android:text="@string/select_contacts_num"            android:textColor="@color/base_title_gold"            android:layout_marginTop="@dimen/base_14"            android:background="@drawable/bg_common_toolbar_btn_seletor"            android:gravity="center"            android:paddingLeft="8dp"            android:paddingRight="8dp"            android:clickable="true"            android:layout_alignRight="@id/toolbar"            android:layout_marginRight="16dp"/>    </RelativeLayout>    <com.xdja.contact.view.SlidingTabLayout        android:id="@+id/choose_contact_header"        android:layout_width="match_parent"        android:layout_height="48dp"        android:background="@color/base_gray_f7"/>    <View        android:layout_marginTop="-1dp"        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="@drawable/shape_line"/>    <com.xdja.contact.view.NoScrollViewPager        android:id="@+id/choose_contact_pager"        android:layout_width="match_parent"        android:layout_height="match_parent"/></LinearLayout>