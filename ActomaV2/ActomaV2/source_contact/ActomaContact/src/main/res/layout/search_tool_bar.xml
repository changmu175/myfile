<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:tools="http://schemas.android.com/tools"        android:layout_width="match_parent"        android:layout_height="56dp"        android:orientation="vertical"        tools:ignore="UselessParent">        <RelativeLayout            android:id="@+id/search_tool_bar_layout"            android:layout_width="match_parent"            android:layout_marginRight="@dimen/base_12"            android:layout_height="40dp"            android:layout_marginTop="10dp"            tools:ignore="UselessParent">            <ImageView                android:id="@+id/search_icon"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_centerVertical="true"                android:visibility="gone"                android:src="@drawable/abs_ic_search"                android:contentDescription="@null"/>            <EditText                android:id="@+id/search_edittext"                style="@style/search_edittext"                android:paddingRight="80dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="14sp"                android:drawablePadding="4dp"                android:paddingBottom="5dp"                android:drawableLeft="@drawable/ic_searchbar_search"                android:layout_alignParentBottom="true"                android:hint="@string/contact_search_account_or_phone"                android:background="@drawable/bg_edittext"                android:singleLine="true"                android:textColorHint="#38FFFFFF"                android:layout_centerVertical="true"                android:textColor="#FFe8dec8"/>            <!--android:inputType="number"-->            <Button                android:id="@+id/search_btn"                android:layout_width="46dp"                android:layout_height="28dp"                android:text="@string/action_search"                android:textAllCaps="false"                android:textSize="12sp"                android:layout_alignParentRight="true"                android:layout_marginRight="1dp"                android:layout_alignParentBottom="true"                android:layout_marginBottom="12dp"                android:textColor="@color/base_black_95"                android:background="@drawable/selector_btn_gold" />            <ImageButton                android:id="@+id/btn_search_clear"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:layout_marginBottom="12dp"                android:layout_marginRight="12dp"                android:layout_toLeftOf="@id/search_btn"                android:background="@null"                android:src="@drawable/ic_searchbar_clear"                android:contentDescription="@null"/>        </RelativeLayout></RelativeLayout>