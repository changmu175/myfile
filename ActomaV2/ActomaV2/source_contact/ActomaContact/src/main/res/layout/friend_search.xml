<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <include        android:id="@+id/toolbar"        layout="@layout/view_toolbar" />    <RelativeLayout        android:layout_below="@id/toolbar"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#EEEEEE">        <android.support.v7.widget.RecyclerView            android:id="@+id/friend_search_list"            android:layout_width="match_parent"            android:layout_height="match_parent"            />        <TextView            android:id="@+id/search_no_result"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:text="@string/contact_search_nothing"            android:layout_marginTop="@dimen/base_40"            android:gravity="center"            android:textColor="@color/base_black_50"            android:textSize="16sp"            android:visibility="gone" />        <include            android:id="@+id/search_tips"            layout="@layout/search_more"            android:layout_width="262.66dp"            android:layout_height="wrap_content"            android:layout_marginTop="95dp"            android:layout_centerHorizontal="true"            android:visibility="gone"/>    </RelativeLayout></RelativeLayout>