<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginRight="12dp"        android:minHeight="@dimen/base_56"        android:background="@drawable/selector_contact_list_item">        <com.xdja.comm.circleimageview.CircleImageView            android:id="@+id/friend_list_item_head"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_marginLeft="12dp"            android:background="@drawable/img_avater_40" />        <LinearLayout            android:id="@+id/friend_list_right_layout"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:orientation="horizontal">            <TextView                android:id="@+id/friend_list_item_label"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center"                android:text="@string/contact_safe_communication"                android:textColor="#cf5516"                android:textSize="14sp"                android:visibility="gone" />            <RelativeLayout                android:id="@+id/open_tranfer"                android:layout_width="72dp"                android:layout_height="56dp">                <ImageView                    android:id="@+id/friend_open_transfer"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="20dp"                    android:clickable="true"                    android:visibility="visible"                    android:contentDescription="@null"/>            </RelativeLayout>        </LinearLayout>        <TextView            android:id="@+id/friend_list_item_name"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="12dp"            android:layout_marginRight="32dp"            android:layout_toLeftOf="@id/friend_list_right_layout"            android:layout_toRightOf="@id/friend_list_item_head"            android:ellipsize="end"            android:maxEms="7"            android:singleLine="true"            android:text="@string/contact_layout_nickname"            android:textColor="#DF000000"            android:textSize="16sp" /></RelativeLayout>