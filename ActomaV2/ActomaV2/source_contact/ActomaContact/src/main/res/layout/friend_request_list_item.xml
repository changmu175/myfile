<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:background="@drawable/selector_contact_list_item"    android:descendantFocusability="blocksDescendants"    android:layout_height="@dimen/list_item_height"    >    <com.xdja.comm.circleimageview.CircleImageView        android:id="@+id/user_photo"        android:layout_width="42dp"        android:layout_height="42dp"        android:layout_alignParentLeft="true"        android:layout_centerVertical="true"        android:layout_marginLeft="12dp"        android:background="@drawable/img_avater_40" />    <FrameLayout        android:id="@+id/request_layout_right"        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:layout_marginRight="16dp"        android:layout_centerVertical="true"        android:layout_alignParentRight="true">        <Button            android:id="@+id/judge_button"            android:layout_width="48dp"            android:layout_height="28dp"            android:textColor="#F3000000"            android:textSize="14sp"            android:layout_gravity="center"            android:background="@drawable/selector_btn_gold"            android:visibility="gone"/>        <TextView            android:id="@+id/judge_text"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:textSize="12sp"            android:textColor="#80000000"            android:visibility="gone"/>    </FrameLayout>    <RelativeLayout        android:id="@+id/content_layout"        android:layout_width="wrap_content"        android:layout_height="64dp"        android:layout_marginRight="12dp"        android:layout_marginLeft="12dp"        android:gravity="center_vertical"        android:layout_toRightOf="@id/user_photo"        android:layout_toLeftOf="@id/request_layout_right"        android:layout_centerInParent="true">        <TextView            android:id="@+id/atAccount"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="16sp"            android:textColor="#f3000000"            android:singleLine="true"            android:text="@string/login_account_lable"/>        <TextView            android:id="@+id/request_info"            android:layout_below="@+id/atAccount"            android:singleLine="true"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:ellipsize="end"            android:textSize = "12sp"            android:textColor="#a6000000"            android:text="@string/contact_layout_check_request_info"            android:maxLines="1"/>    </RelativeLayout></RelativeLayout>