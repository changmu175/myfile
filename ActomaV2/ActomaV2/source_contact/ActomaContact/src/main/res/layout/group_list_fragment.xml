<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <!--overdraw-->    <!--android:background="@color/base_gray_ee"-->    <View        android:layout_width="fill_parent"        android:layout_height="1px"        android:background="@color/base_gray_f4" />    <FrameLayout        android:id="@+id/dialtactListView"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="1">        <android.support.v4.widget.SwipeRefreshLayout            android:id="@+id/swipe_group_container"            android:layout_width="match_parent"            android:layout_height="match_parent">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical">                <ListView                    android:id="@android:id/list"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_marginLeft="0dp"                    android:layout_marginRight="0dp"                    android:divider="@color/list_view_divider"                    android:dividerHeight="@dimen/list_divider_height"                    android:fadingEdge="none"                    android:fastScrollEnabled="false"                    android:nestedScrollingEnabled="false"                    android:paddingTop="0dp"                    android:scrollbars="none"                    tools:ignore="UnusedAttribute" />                <RelativeLayout                    android:id="@+id/empty_list_view"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_gravity="center"                    android:minHeight="?android:attr/listPreferredItemHeight"                    android:visibility="gone"                    >                        <ImageView                            android:id="@+id/emptyListViewImage"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="72dp"                            android:src="@drawable/img_group_empty_view"                            android:contentDescription="@null"/>                        <TextView                            android:id="@+id/emptyListViewMessage"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="22dp"                            android:gravity="center"                            android:text="@string/contact_no_group_text"                            android:textColor="#A6000000"                            android:textSize="18sp"                            android:layout_below="@id/emptyListViewImage"/>                        <TextView                            android:id="@+id/emptyMessage"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="8dp"                            android:gravity="center"                            android:text="@string/no_group"                            android:textColor="#73000000"                            android:textSize="14sp"                            android:layout_below="@id/emptyListViewMessage"/>                </RelativeLayout>            </LinearLayout>        </android.support.v4.widget.SwipeRefreshLayout>    </FrameLayout></LinearLayout>