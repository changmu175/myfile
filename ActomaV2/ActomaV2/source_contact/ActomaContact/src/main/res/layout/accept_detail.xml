<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <include        android:id="@+id/accept_detail_top"        layout="@layout/accept_detail_top"        android:layout_height="wrap_content"        android:layout_width="wrap_content"        android:layout_alignParentTop="true"/>    <LinearLayout        android:id="@+id/accept_bottom_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_alignParentBottom="true"        android:layout_marginBottom="@dimen/base_12"        android:orientation="vertical">        <View            android:id="@+id/second_phone_view"            android:layout_height="@dimen/list_divider_height"            android:layout_width="match_parent"            android:layout_marginBottom="20dp"            android:background="@color/base_horizontal_line"/>        <TextView            android:id="@+id/accept_apply_btn"            android:layout_height="@dimen/contact_friend_includ_item_heght"            android:layout_width="@dimen/contact_friend_includ_item_width"            android:background="@drawable/bg_common_btn_seletor"            android:layout_gravity="center_horizontal"            android:text="@string/contact_friend_state_accepte"            android:gravity="center"            android:clickable="true"            android:textColor="@color/base_black_95"            android:textSize="@dimen/body1_14"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/accept_detail_top"        android:layout_above="@id/accept_bottom_layout"        android:layout_marginBottom="@dimen/base_12"        android:orientation="vertical">        <RelativeLayout            android:layout_height="32dp"            android:layout_width="match_parent">            <TextView                android:id="@+id/address_book_text"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:layout_alignParentLeft="true"                android:layout_marginLeft="@dimen/base_16"                android:layout_centerVertical="true"                android:text="@string/contact_friend_request_check_info"                android:textSize="@dimen/body1_14"                android:textColor="@color/base_black_65"/>        </RelativeLayout>        <View            android:layout_height="@dimen/list_divider_height"            android:layout_width="match_parent"            android:background="@color/base_horizontal_line"/>        <ListView            android:id="@+id/accept_listview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:divider="@color/list_view_divider"            android:dividerHeight="@dimen/list_divider_height"            android:scrollbars="none"            android:background="@color/base_white_100"/>    </LinearLayout></RelativeLayout>