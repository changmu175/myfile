<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:layout_marginBottom="10dp">        <com.xdja.comm.circleimageview.CircleImageView            android:id="@+id/contact_eidtor_avater"            android:layout_width="64dp"            android:layout_height="64dp"            android:layout_marginTop="6dp"            android:layout_marginRight="4dp"            android:layout_centerHorizontal="true"            android:src="@drawable/img_avater_64"            android:clickable="true" />        <ImageButton            android:id="@+id/contact_eidtor_btn"            android:layout_width="64dp"            android:layout_height="64dp"            android:layout_marginTop="6dp"            android:layout_marginRight="4dp"            android:layout_centerHorizontal="true"            android:background="@null"            android:visibility="gone"            android:clickable="true"            android:contentDescription="@null"/>        <ImageButton            android:id="@+id/contact_eidtor_del_btn"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignEnd="@id/contact_eidtor_avater"            android:layout_alignRight="@id/contact_eidtor_avater"            android:layout_alignTop="@id/contact_eidtor_avater"            android:layout_marginRight="-3dp"            android:layout_marginTop="-4dp"            android:visibility="visible"            android:background="@null"            android:src="@drawable/bg_delete_btn_selector"            android:contentDescription="@null"/>        <TextView            android:id="@+id/contact_editor_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:textColor="@color/base_black_95"            android:singleLine="true"            android:textSize="@dimen/body1_14"            android:layout_marginTop="8dp"            android:layout_below="@id/contact_eidtor_avater" /></RelativeLayout>